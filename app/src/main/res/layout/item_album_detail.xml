<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_album_item_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/album_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0"

        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/album_count_tv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/detail_item_title"
            android:textColor="@color/black"
            android:text="我是大标题我是大标题我是大标题我是大标题我是大标题"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"

                android:src="@mipmap/play_icon_album_list"
                />
            <TextView
                android:id="@+id/detail_item_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.2万"
                android:textColor="#979797"
                android:layout_marginLeft="3dp"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingTop="4dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/clock"
                />
            <TextView
                android:id="@+id/detail_item_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="5:43"
                android:textColor="#979797"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/detail_item_update_time"
        android:layout_marginRight="10dp"
        android:text="2018-12-3"
        android:textSize="12sp" />

</RelativeLayout>